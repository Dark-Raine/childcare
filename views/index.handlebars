        <section id="contact">

            <h1>Contact Me</h1>
            <hr />
            <form method="POST" action="send">
                <p>
                    <label>Name</label>
                    <input type="text" name="name" placeholder="John Doe" required>
                </p>
                <p>
                    <label>Email Address</label>
                    <input type="email" id="email" name="email"  placeholder="example@email.com" required>
                </p>
                <p>
                    <label>Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="###-####-####" minlength="11" maxlength="11" required>
                </p>
                <p>
                    <label>Message</label>
                    <textarea id="textarea" type="textarea" name="message" placeholder="Message here..." required></textarea>
                    {{msg}}
                </p>
                <button type="reset">Clear</button>
                <button type="submit"  value="submit" id="btnSnd" onclick="return formValidate();">Send</button>
            </form>
